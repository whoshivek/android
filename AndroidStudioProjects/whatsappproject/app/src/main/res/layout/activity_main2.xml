<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawerlayout"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="0dp"
            android:outlineSpotShadowColor="@color/White"
            android:backgroundTint="@color/White"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="40dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/menutry"
                    android:clickable="true"
                    android:layout_height="wrap_content"
                    android:text=" â˜°  "
                    android:textStyle="bold"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_margin="15dp"
                    android:layout_alignParentLeft="true"
                    android:textSize="31dp"
                    android:textColor="@color/colorPrimary"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/whatsapppp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WhatsDirect"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"/>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="14dp"
        android:layout_height="wrap_content"
        android:text="Select your default country"
        android:textSize="20dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/borderll">
        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ccp_showFullName="true"
            app:ccp_textSize="20dp"
            android:id="@+id/ccc"
            android:gravity="center"/>

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:id="@+id/set"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cornerRadius="20dp"
        android:text="Set as my default country"/>


</LinearLayout>



            </LinearLayout>




        </com.google.android.material.card.MaterialCardView>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:elevation="@dimen/google_1x"
    android:layout_height="wrap_content">
    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottomBar"
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:backgroundColor="@color/colorPrimary"
        app:menu="@menu/menu"/>
</FrameLayout>


    </FrameLayout>

    </FrameLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_viewtwo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemBackground="@drawable/drawable_item_bg"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>


