<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="0dp"
        android:outlineSpotShadowColor="@color/White"
        android:backgroundTint="@color/White"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="40dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" ⋮ "
    android:layout_margin="15dp"
    android:layout_alignParentRight="true"
    android:textSize="30dp"
    android:textColor="@color/colorPrimary"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ⋮ "
                android:id="@+id/threedots"
                android:layout_margin="15dp"
                android:layout_alignParentRight="true"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/whatsapppp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsDirect"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:textSize="20dp"/>
<LinearLayout
android:background="@drawable/borderll"

    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:gravity="center"
    android:text="Select Country"

    android:layout_gravity="center"
    android:textSize="20dp"
    />

<LinearLayout
    android:gravity="end"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.hbb20.CountryCodePicker
        app:textSize="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>

</LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:gravity="center"
                        app:boxBackgroundMode="outline"
                   android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                   app:boxCornerRadiusBottomEnd="20dp"
                   app:boxCornerRadiusTopEnd="20dp"
                   app:boxCornerRadiusTopStart="20dp"
                   app:boxCornerRadiusBottomStart="20dp"
                   app:hintTextColor="#BF46D2"
                   app:boxStrokeColor="#BF46D2"
                   android:layout_height="wrap_content"
                   >



                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:gravity="start"
                    android:hint="Enter number"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="15"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="18sp" />


               </com.google.android.material.textfield.TextInputLayout>






            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:hintTextColor="#BF46D2"
                app:boxStrokeColor="#BF46D2"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="8dp"
                    android:lines="3"
                    android:gravity="start"
                    android:textSize="18sp"
                    android:paddingStart="8dp"
                    android:hint="Enter message"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/savedata"
                android:textAllCaps="false"
                android:backgroundTint="#BF46D2"
                android:textColor="@color/White"
                android:text="          Chat with WhatsApp       "
                app:cornerRadius="25dp"
                android:layout_gravity="center"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                 android:textAllCaps="false"
                android:background="@drawable/buttonall"
                android:textColor="@color/White"
                android:text="Chat with WhatsApp Business"
                app:cornerRadius="25dp"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                    android:id="@+id/sharelink"
                android:backgroundTint="#BF46D2"
                android:textColor="@color/White"
                  android:drawableLeft="@drawable/share"
                android:textAllCaps="false"
                  android:drawableTint="@color/White"
                android:text="Share Link "
                app:cornerRadius="25dp"
                android:layout_gravity="center"/>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>